<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.smb.glowbutton.GlowButton
        style="@style/KeyStyle"
        android:id="@+id/c_key"
        app:gb_text="C KEY"
        app:gb_backgroundColor="#e74c3c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="c"/>

    <com.smb.glowbutton.GlowButton
        style="@style/KeyStyle"
        android:id="@+id/d_key"
        app:gb_text="D KEY"
        app:gb_backgroundColor="#e67e22"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="d"/>

    <com.smb.glowbutton.GlowButton
        style="@style/KeyStyle"
        android:id="@+id/e_key"
        app:gb_text="E KEY"
        app:gb_backgroundColor="#f1c40f"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="e"/>

    <com.smb.glowbutton.GlowButton
        style="@style/KeyStyle"
        android:id="@+id/f_key"
        app:gb_text="F KEY"
        app:gb_backgroundColor="#1abc9c"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="f"/>

    <com.smb.glowbutton.GlowButton
        style="@style/KeyStyle"
        android:id="@+id/g_key"
        app:gb_text="G KEY"
        app:gb_backgroundColor="#2ecc71"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="g"/>

    <com.smb.glowbutton.GlowButton
        style="@style/KeyStyle"
        android:id="@+id/a_key"
        app:gb_text="A KEY"
        app:gb_backgroundColor="#3498db"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="a"/>

    <com.smb.glowbutton.GlowButton
        style="@style/KeyStyle"
        android:id="@+id/b_key"
        app:gb_text="B KEY"
        app:gb_backgroundColor="#9b59b6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="b"/>

</LinearLayout>
